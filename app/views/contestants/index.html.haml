%h1 List of Contestants

%table.table.table-striped
  %tr
    %th Email
    %th May contact
    %th
    %th

  - @contestants.each do |contestant|
    %tr
      %td= contestant.email
      %td= contestant.may_contact
      %td= link_to 'Show', contestant, class: 'btn btn-primary'
      %td= link_to 'Edit', edit_contestant_path(contestant), class: 'btn btn-info'
      %td= link_to 'Destroy', contestant, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'btn btn-danger'

%br

= link_to 'New Contestant', new_contestant_path, class: 'btn btn-success'
